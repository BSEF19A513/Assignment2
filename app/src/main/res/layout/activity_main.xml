<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="611dp"
        android:layout_height="1121dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="361dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingTop="35dp"
            android:text="Welcome to English Alphabets learning App"
            android:textAlignment="center"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:onClick="startOnClick"
            android:textSize="30dp"
            android:text="Start Learning" />

        <Button
            android:id="@+id/btnQuiz"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="108dp"
            android:layout_marginTop="20dp"
            android:onClick="quizOnClick"
            android:textSize="30dp"
            android:text="Attempt Quiz" />

        <Button
            android:id="@+id/btnRepository"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="108dp"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:onClick="repositoryOnClick"
            android:text="Repository" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>